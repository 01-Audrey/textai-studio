# ==================================================
# TextAI Studio - Environment Variables
# ==================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to git (add to .gitignore)
# ==================================================

# ==================================================
# APPLICATION SETTINGS
# ==================================================
APP_NAME=TextAI Studio
APP_VERSION=1.0.0
APP_ENV=production
DEBUG=false

# ==================================================
# SECURITY
# ==================================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-this-in-production

# Admin credentials (change immediately after first login)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password

# ==================================================
# SERVER CONFIGURATION
# ==================================================
HOST=0.0.0.0
PORT=8501

# ==================================================
# DATA STORAGE
# ==================================================
DATA_DIR=./user_data
HISTORY_DIR=./user_data/history
UPLOAD_DIR=./user_data/uploads

# Maximum file upload size (MB)
MAX_UPLOAD_SIZE=10

# ==================================================
# MODEL CONFIGURATION
# ==================================================
# Cache directory for models
MODEL_CACHE_DIR=./models

# Model names (HuggingFace)
SENTIMENT_MODEL=distilbert-base-uncased-finetuned-sst-2-english
SUMMARIZER_MODEL=facebook/bart-large-cnn
FAKE_NEWS_MODEL=bert-base-uncased
JOB_MATCHER_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ==================================================
# PERFORMANCE
# ==================================================
# Enable model caching
ENABLE_MODEL_CACHE=true

# Cache TTL (seconds)
CACHE_TTL=300

# Maximum batch size
MAX_BATCH_SIZE=100

# ==================================================
# RATE LIMITING
# ==================================================
# Rate limits per hour by user tier
GUEST_RATE_LIMIT=10
USER_RATE_LIMIT=100
PRO_RATE_LIMIT=1000

# ==================================================
# LOGGING
# ==================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# ==================================================
# OPTIONAL: DATABASE (if using PostgreSQL)
# ==================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/textai_db
# DATABASE_POOL_SIZE=10

# ==================================================
# OPTIONAL: EMAIL (for notifications)
# ==================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@textai.app

# ==================================================
# OPTIONAL: MONITORING & ANALYTICS
# ==================================================
# SENTRY_DSN=https://your-sentry-dsn
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# ==================================================
# OPTIONAL: EXTERNAL APIS
# ==================================================
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# ==================================================
# FEATURE FLAGS
# ==================================================
ENABLE_USER_SIGNUP=true
ENABLE_API_ACCESS=true
ENABLE_BATCH_PROCESSING=true
ENABLE_ANALYTICS=true
ENABLE_ADMIN_DASHBOARD=true

# ==================================================
# NOTES
# ==================================================
# - Never commit the actual .env file to git
# - Use strong, random values for SECRET_KEY
# - Change default admin password immediately
# - Review and update settings before production deployment
# ==================================================
