# ==================================================
# Streamlit Secrets - Example
# ==================================================
# Copy to secrets.toml and fill in your values
# DO NOT commit secrets.toml to git
# ==================================================

# Database connection (if using)
# [connections.postgresql]
# url = "postgresql://user:password@localhost:5432/textai_db"

# API Keys
# [api_keys]
# openai = "sk-..."
# anthropic = "sk-ant-..."

# Admin credentials
[admin]
username = "admin"
password = "change-this-secure-password"

# Application secrets
[app]
secret_key = "your-secret-key-here"
